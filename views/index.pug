extends layout

block content
  title= "Members Only"
  div.content-wrapper
    if (!user)
      h1= "Log in to post!" 
    else
      if (user && user.isAdmin)
        h1 Hi, #{user.username} ðŸ‘‘
      else
        h1 Hi, #{user.username}

    for message in messages
      div.message
        h2 #{message.title}
        p #{message.content}
        p Posted by user: #{message.author.username}
        p #{message.date.toLocaleString()}
        if (user && user.isAdmin)
          form(action="" method="POST")
            input(name="messageId" value=message.id type="hidden" required)
            button.submit-button Delete